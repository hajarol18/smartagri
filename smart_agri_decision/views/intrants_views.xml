<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue formulaire pour intrant.agri -->
    <record id="view_intrant_form" model="ir.ui.view">
        <field name="name">intrant.agri.form</field>
        <field name="model">intrant.agri</field>
        <field name="arch" type="xml">
            <form string="Intrant Agricole">
                <sheet>
                    <group>
                        <group string="Informations générales">
                            <field name="name"/>
                            <field name="type_intrant"/>
                            <field name="exploitation_id"/>
                        </group>
                        <group string="Stock">
                            <field name="stock_minimum"/>
                            <field name="qty_available" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste pour intrant.agri -->
    <record id="view_intrant_tree" model="ir.ui.view">
        <field name="name">intrant.agri.tree</field>
        <field name="model">intrant.agri</field>
        <field name="arch" type="xml">
            <tree string="Intrants Agricoles">
                <field name="name"/>
                <field name="type_intrant"/>
                <field name="exploitation_id"/>
                <field name="stock_minimum"/>
                <field name="qty_available"/>
            </tree>
        </field>
    </record>

    <!-- Action pour intrant.agri -->
    <record id="action_intrant_agri" model="ir.actions.act_window">
        <field name="name">Intrants Agricoles</field>
        <field name="res_model">intrant.agri</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier intrant agricole !
            </p>
            <p>
                Les intrants agricoles comprennent les semences, engrais, pesticides
                et autres ressources nécessaires à la production agricole.
            </p>
        </field>
    </record>
</odoo> 