<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue formulaire pour intervention.agri -->
    <record id="view_intervention_form" model="ir.ui.view">
        <field name="name">intervention.agri.form</field>
        <field name="model">intervention.agri</field>
        <field name="arch" type="xml">
            <form string="Intervention Agricole">
                <sheet>
                    <group>
                        <group string="Informations générales">
                            <field name="name"/>
                            <field name="type_intervention"/>
                            <field name="exploitation_id"/>
                        </group>
                        <group string="Localisation">
                            <field name="parcelle_id"/>
                            <field name="culture_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Planification">
                            <field name="date_deadline"/>
                            <field name="duree_estimee"/>
                            <field name="cout_estime"/>
                        </group>
                        <group string="État">
                            <field name="stage_id"/>
                            <field name="priority"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Intrants utilisés">
                            <field name="intrants_ids"/>
                        </page>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste pour intervention.agri -->
    <record id="view_intervention_tree" model="ir.ui.view">
        <field name="name">intervention.agri.tree</field>
        <field name="model">intervention.agri</field>
        <field name="arch" type="xml">
            <tree string="Interventions Agricoles">
                <field name="name"/>
                <field name="type_intervention"/>
                <field name="exploitation_id"/>
                <field name="parcelle_id"/>
                <field name="date_deadline"/>
                <field name="stage_id"/>
                <field name="priority"/>
            </tree>
        </field>
    </record>

    <!-- Action pour intervention.agri -->
    <record id="action_intervention_agri" model="ir.actions.act_window">
        <field name="name">Interventions Agricoles</field>
        <field name="res_model">intervention.agri</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre première intervention agricole !
            </p>
            <p>
                Les interventions agricoles comprennent toutes les actions nécessaires
                à la conduite des cultures : semis, irrigation, fertilisation, etc.
            </p>
        </field>
    </record>
</odoo> 