<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue formulaire pour parcelle.agri avec carte Leaflet -->
        <record id="view_parcelle_agri_form_map" model="ir.ui.view">
            <field name="name">parcelle.agri.form.map</field>
            <field name="model">parcelle.agri</field>
            <field name="arch" type="xml">
                <form string="Parcelle Agricole">
                    <header>
                        <button name="action_calculer_surface" type="object" string="📏 Calculer Surface" class="btn-primary"/>
                        <button name="action_centrer_carte" type="object" string="🗺️ Centrer Carte" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active"/>
                    </header>
                    
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="nom" placeholder="Nom de la parcelle"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Informations Générales">
                                <field name="exploitation_id" required="1"/>
                                <field name="culture_id"/>
                                <field name="surface" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="surface_calculee" readonly="1" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="unite_surface" required="1"/>
                                <field name="date_plantation"/>
                                <field name="date_recolte_prevue"/>
                            </group>
                            
                            <group string="Géolocalisation">
                                <field name="latitude" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="longitude" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="altitude" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="coordonnees_gps" readonly="1"/>
                            </group>
                        </group>
                        
                        <!-- Carte Leaflet Interactive -->
                        <group string="🗺️ Carte Interactive - Création de Parcelle">
                            <field name="carte_parcelle" widget="leaflet_map" options="{'height': '600px'}"/>
                        </group>
                        
                        <group>
                            <group string="Caractéristiques du Sol">
                                <field name="type_sol"/>
                                <field name="ph_sol" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="materiau_organique" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="capacite_retention_eau" widget="float_time" options="{'widget': 'float_time'}"/>
                            </group>
                            
                            <group string="Irrigation et Drainage">
                                <field name="systeme_irrigation"/>
                                <field name="besoin_eau" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="efficacite_irrigation" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="systeme_drainage"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Gestion des Cultures">
                                <field name="rotation_culture"/>
                                <field name="densite_plantation" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="espacement_rangs" widget="float_time" options="{'widget': 'float_time'}"/>
                                <field name="espacement_plantes" widget="float_time" options="{'widget': 'float_time'}"/>
                            </group>
                            
                            <group string="Suivi et Maintenance">
                                <field name="derniere_intervention"/>
                                <field name="prochaine_intervention"/>
                                <field name="notes" placeholder="Notes et observations..."/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Interventions" name="interventions">
                                <field name="intervention_ids" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="type_intervention"/>
                                        <field name="description"/>
                                        <field name="cout"/>
                                        <field name="statut"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Météo" name="meteo">
                                <field name="meteo_data_ids" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="temperature"/>
                                        <field name="precipitation"/>
                                        <field name="humidite"/>
                                        <field name="vent_vitesse"/>
                                        <field name="alerte_gel"/>
                                        <field name="alerte_canicule"/>
                                        <field name="alerte_secheresse"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Historique" name="historique">
                                <field name="historique_ids" readonly="1">
                                    <tree>
                                        <field name="date"/>
                                        <field name="action"/>
                                        <field name="details"/>
                                        <field name="utilisateur_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

