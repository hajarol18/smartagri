        <!-- Vue liste pour parcelle.agri -->
        <record id="view_parcelle_agri_tree" model="ir.ui.view">
            <field name="name">parcelle.agri.tree</field>
            <field name="model">parcelle.agri</field>
            <field name="arch" type="xml">
                <tree string="Parcelles Agricoles">
                    <field name="nom"/>
                    <field name="exploitation_id"/>
                    <field name="culture_id"/>
                    <field name="surface" widget="float_time" options="{'widget': 'float_time'}"/>
                    <field name="surface_calculee" widget="float_time" options="{'widget': 'float_time'}"/>
                    <field name="unite_surface"/>
                    <field name="latitude" widget="float_time" options="{'widget': 'float_time'}"/>
                    <field name="longitude" widget="float_time" options="{'widget': 'float_time'}"/>
                    <field name="type_sol"/>
                    <field name="state"/>
                    <field name="derniere_intervention"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche pour parcelle.agri -->
        <record id="view_parcelle_agri_search" model="ir.ui.view">
            <field name="name">parcelle.agri.search</field>
            <field name="model">parcelle.agri</field>
            <field name="arch" type="xml">
                <search string="Recherche Parcelles">
                    <field name="nom"/>
                    <field name="exploitation_id"/>
                    <field name="culture_id"/>
                    <field name="type_sol"/>
                    <field name="state"/>
                    
                    <filter string="Mes Parcelles" name="mes_parcelles" domain="[('exploitation_id.user_id', '=', uid)]"/>
                    <filter string="Parcelles Actives" name="actives" domain="[('state', '=', 'active')]"/>
                    <filter string="Parcelles en Brouillon" name="brouillon" domain="[('state', '=', 'draft')]"/>
                    
                    <group expand="0" string="Regrouper par">
                        <filter string="Exploitation" name="group_exploitation" context="{'group_by': 'exploitation_id'}"/>
                        <filter string="Culture" name="group_culture" context="{'group_by': 'culture_id'}"/>
                        <filter string="Type de Sol" name="group_sol" context="{'group_by': 'type_sol'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue kanban pour parcelle.agri -->
        <record id="view_parcelle_agri_kanban" model="ir.ui.view">
            <field name="name">parcelle.agri.kanban</field>
            <field name="model">parcelle.agri</field>
            <field name="arch" type="xml">
                <kanban string="Parcelles Agricoles" class="o_kanban_small_column">
                    <field name="nom"/>
                    <field name="exploitation_id"/>
                    <field name="culture_id"/>
                    <field name="surface"/>
                    <field name="surface_calculee"/>
                    <field name="unite_surface"/>
                    <field name="state"/>
                    <field name="derniere_intervention"/>
                    
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="nom"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <field name="state" widget="label_selection" options="{'classes': {'draft': 'default', 'active': 'success', 'archived': 'danger'}}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <div class="row">
                                            <div class="col-6">
                                                <strong>Exploitation:</strong><br/>
                                                <field name="exploitation_id"/>
                                            </div>
                                            <div class="col-6">
                                                <strong>Culture:</strong><br/>
                                                <field name="culture_id"/>
                                            </div>
                                        </div>
                                        
                                        <div class="row mt-2">
                                            <div class="col-6">
                                                <strong>Surface:</strong><br/>
                                                <field name="surface"/> <field name="unite_surface"/>
                                            </div>
                                            <div class="col-6">
                                                <strong>Calculée:</strong><br/>
                                                <field name="surface_calculee"/> ha
                                            </div>
                                        </div>
                                        
                                        <div class="row mt-2">
                                            <div class="col-12">
                                                <strong>Dernière intervention:</strong><br/>
                                                <field name="derniere_intervention"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action pour ouvrir la vue avec carte -->
        <record id="action_parcelle_agri_map" model="ir.actions.act_window">
            <field name="name">Créer Parcelle (Carte)</field>
            <field name="res_model">parcelle.agri</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_parcelle_agri_form_map"/>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première parcelle en utilisant la carte interactive !
                </p>
                <p>
                    Utilisez les outils de dessin pour créer des polygones représentant vos parcelles.
                    La carte vous permettra de visualiser et modifier facilement la géométrie.
                </p>
            </field>
        </record>

        <!-- Action pour ouvrir la vue normale -->
        <record id="action_parcelle_agri" model="ir.actions.act_window">
            <field name="name">Parcelles Agricoles</field>
            <field name="res_model">parcelle.agri</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créez votre première parcelle agricole !
                </p>
                <p>
                    Définissez les caractéristiques de vos parcelles : surface, culture, type de sol, etc.
                </p>
            </field>
        </record>
    </data>
</odoo> 